CONFIG_SOC_SERIES_NRF52X=y
CONFIG_SOC_NRF52832_QFAA=y
CONFIG_BOARD_BST_ARDUINO_NICLA=y

#Information returned by coines_get_board_info() for Nicla
CONFIG_COINES_BOARD_ID=6
CONFIG_COINES_HW_ID=17
CONFIG_COINES_SW_ID=16

# Enable MPU
CONFIG_ARM_MPU=y
CONFIG_HW_STACK_PROTECTION=y

# enable GPIO
CONFIG_GPIO=y

# enable uart driver
CONFIG_SERIAL=y

#Nicla accesses USB via a bridge. Switch off USB related
#modules just to be sure
CONFIG_USB_DEVICE_STACK=n
CONFIG_USB_CDC_ACM=n
CONFIG_UART_ASYNC_API=n
CONFIG_BST_USB_AUTO_START=n

CONFIG_SPI_NOR_FLASH_LAYOUT_PAGE_SIZE=4096

# enable console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y
#Use UART for logging
CONFIG_LOG_BACKEND_UART=y
# additional board options
# Disable reset pin, to use PB1 as normal button
CONFIG_GPIO_AS_PINRESET=n

# enable pin controller
CONFIG_PINCTRL=y
